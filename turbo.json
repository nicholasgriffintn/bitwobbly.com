{
  "$schema": "https://turbo.build/schema.json",
  "globalPassThroughEnv": ["CLOUDFLARE_API_TOKEN"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".wrangler/**"]
    },
    "build:staging": {
      "dependsOn": ["^build:staging"],
      "outputs": ["dist/**", ".wrangler/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "outputs": []
    },
    "deploy": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "deploy:staging": {
      "dependsOn": ["build:staging"],
      "outputs": []
    },
    "deploy:prod": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": []
    }
  }
}
