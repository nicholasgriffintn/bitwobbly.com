{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "bitwobbly-app",
  "main": "@tanstack/react-start/server-entry",
  "compatibility_date": "2025-07-15",
  "compatibility_flags": ["nodejs_compat"],
  "routes": [
    {
      "pattern": "bitwobbly.com",
      "custom_domain": true
    }
  ],
  "workers_dev": false,
  "preview_urls": false,
  "observability": {
    "enabled": false,
    "head_sampling_rate": 1,
    "logs": {
      "enabled": false,
      "head_sampling_rate": 1,
      "invocation_logs": false
    }
  },
  "vars": {},
  "d1_databases": [
    {
      "binding": "DB",
      "database_name": "bitwobbly_db",
      "database_id": "f2424789-6b8b-4b06-aadd-0de982901cab",
      "migrations_dir": "../../packages/shared/drizzle"
    }
  ],
  "kv_namespaces": [
    {
      "binding": "KV",
      "id": "7b37c9a568bf44558ba6959148073058"
    }
  ],
  "r2_buckets": [
    {
      "binding": "SENTRY_RAW",
      "bucket_name": "bitwobbly-issues-raw"
    },
    {
      "binding": "SENTRY_CATALOG",
      "bucket_name": "bitwobbly-issues-catalog"
    }
  ],
  "queues": {
    "producers": [
      {
        "binding": "ALERT_JOBS",
        "queue": "bitwobbly-alert-jobs"
      }
    ]
  },
  "ratelimits": [
    {
      "name": "WEBHOOK_RATE_LIMITER",
      "namespace_id": "1001",
      "simple": {
        "limit": 100,
        "period": 60
      }
    },
    {
      "name": "STATUS_PAGE_RATE_LIMITER",
      "namespace_id": "1002",
      "simple": {
        "limit": 500,
        "period": 60
      }
    },
    {
      "name": "API_RATE_LIMITER",
      "namespace_id": "1003",
      "simple": {
        "limit": 1000,
        "period": 60
      }
    }
  ]
}
