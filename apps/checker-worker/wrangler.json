{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "bitwobbly-checker",
  "main": "src/index.ts",
  "compatibility_date": "2025-07-15",
  "compatibility_flags": ["nodejs_compat"],
  "workers_dev": false,
  "preview_urls": false,
  "observability": {
    "enabled": true,
    "head_sampling_rate": 0.01,
    "logs": {
      "enabled": true,
      "head_sampling_rate": 0.01,
      "invocation_logs": false
    }
  },
  "dev": {
    "port": 8787,
    "inspector_port": 9231
  },
  "vars": {},
  "d1_databases": [
    {
      "binding": "DB",
      "database_name": "bitwobbly_db",
      "database_id": "f2424789-6b8b-4b06-aadd-0de982901cab",
      "migrations_dir": "../../packages/shared/drizzle"
    }
  ],
  "kv_namespaces": [
    {
      "binding": "KV",
      "id": "7b37c9a568bf44558ba6959148073058"
    }
  ],
  "queues": {
    "consumers": [
      {
        "queue": "bitwobbly-check-jobs",
        "max_batch_size": 10,
        "max_batch_timeout": 5,
        "max_retries": 5,
        "dead_letter_queue": "bitwobbly-check-jobs-dlq"
      }
    ],
    "producers": [
      {
        "binding": "ALERT_JOBS",
        "queue": "bitwobbly-alert-jobs"
      }
    ]
  },
  "durable_objects": {
    "bindings": [
      {
        "name": "INCIDENT_DO",
        "class_name": "IncidentCoordinator"
      }
    ]
  },
  "migrations": [
    {
      "tag": "v1",
      "new_classes": ["IncidentCoordinator"]
    }
  ],
  "analytics_engine_datasets": [
    {
      "binding": "AE",
      "dataset": "bitwobbly-monitor-analytics"
    }
  ]
}
