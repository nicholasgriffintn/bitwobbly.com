{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "bitwobbly-scheduler",
  "main": "src/index.ts",
  "compatibility_date": "2025-07-15",
  "workers_dev": false,
  "preview_urls": false,
  "observability": {
    "enabled": true,
    "head_sampling_rate": 1,
    "logs": {
      "enabled": true,
      "head_sampling_rate": 1,
      "invocation_logs": false,
    },
  },
  "dev": {
    "port": 8788,
    "inspector_port": 9230
  },
  "vars": {
    "PUBLIC_TEAM_ID": "team_demo"
  },
  "triggers": {
    "crons": ["* * * * *"]
  },
  "d1_databases": [
    {
      "binding": "DB",
      "database_name": "bitwobbly_db",
      "database_id": "9bd1c8a6-c792-4ecd-bf3d-d787bf1c9b17",
      "migrations_dir": "../../packages/shared/drizzle"
    }
  ],
  "queues": {
    "producers": [
      {
        "binding": "CHECK_JOBS",
        "queue": "bitwobbly-check-jobs"
      }
    ]
  }
}
